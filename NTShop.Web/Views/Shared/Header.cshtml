@using Microsoft.AspNet.Identity;

<div class="header">
    <div class="top-header">
        <div class="container">
            <div class="top-header-left">
                <ul class="support">
                    <li><a href="#"><label> </label></a></li>
                    <li><a href="#">Hỗ trợ <span class="live">24/7</span></a></li>
                </ul>
                <ul class="support">
                    <li class="van"><a href="#"><label> </label></a></li>
                    <li><a href="#">Miễn phí đơn hàng <span class="live">khi đặt hàng trên 2 triệu</span></a></li>
                </ul>
                <ul class="support">
                    <li class="contact"><a href="#"><label></label></a></li>
                    <li><a href="trang/gioi-thieu.html"><span class="live"> Giới thiệu</span></a></li>
                </ul>
                <ul class="support">
                    <li class="about"><a href="#"><label></label></a></li>
                    <li><a href="/lien-he.html"><span class="live">Liên hệ</span></a></li>
                </ul>
                <div class="clearfix"> </div>
            </div>
            <div class="top-header-right">
                <div class="down-top">
                    <select class="in-drop">
                        <option value="English" class="in-of">English</option>
                        <option value="Japanese" class="in-of">Japanese</option>
                        <option value="French" class="in-of">French</option>
                        <option value="German" class="in-of">German</option>
                    </select>
                </div>
                <div class="down-top top-down">
                    <select class="in-drop">

                        <option value="Dollar" class="in-of">Dollar</option>
                        <option value="Yen" class="in-of">Yen</option>
                        <option value="Euro" class="in-of">Euro</option>
                    </select>
                </div>
                <!---->
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="bottom-header">
        <div class="container">
            <div class="header-bottom-left">
                <div class="logo">
                    <a href="index.html"><img src="/Assets/client/images/logo.png" alt=" " /></a>
                </div>
                <div class="search">
                    <form method="get" action="/tim-kiem.html">
                        <input type="text" id="txtKeyWord" name="keyword" placeholder="Nhập tên sản phẩm">
                        <input type="submit" value="Tìm kiếm" id="btnSearch">
                    </form>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="header-bottom-right">
                @using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { @id = "frmLogout" }))
                {
                    if (Request.IsAuthenticated)
                    {
                        @Html.AntiForgeryToken()
                        <ul class="login">
                            <li><a href="/tai-khoan.html"><span></span>Xin chào :  @User.Identity.GetUserName()</a></li> 
                            <li><a href="#" id="btnLogout">Thoát</a></li>
                        </ul>
                    }

                    else
                    {
                        <ul class="login">
                            <li><a href="/dang-nhap.html"><span> </span>Đăng nhập</a></li> |
                            <li><a href="/dang-ky.html">Đăng ký</a></li>
                        </ul>
                    }
                }
                <div class="cart"><a href="/gio-hang.html"><span> </span>Giỏ hàng</a></div>
                <div class="clearfix"> </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>