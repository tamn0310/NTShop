@model NTShop.Web.Models.RegisterViewModel
@using BotDetect.Web.Mvc;
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/Layouts.cshtml";
}
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
<div class="register">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(false, "", new { @class ="error" })

        if (ViewData["SucessMgs"] != null)
        {
            <div class="alert alert-success" role="alert">
                <strong>Đăng ký thành công !! </strong> Chúc bạn có một ngày tốt lành.
                <br />Ấn <a href="/dang-nhap.html">vào đây</a> để đăng nhập.
            </div>
        }
        <div class="register-top-grid">
            <h3>Thông tin cá nhân</h3>
            <div class="mation">
                <span>Họ tên<label>*</label></span>
                @Html.TextBoxFor(model => model.FullName)

                <span>Đỉa chỉ email<label>*</label></span>
                @Html.TextBoxFor(model => model.Email)

                <span>Địa chỉ<label>*</label></span>
                @Html.TextBoxFor(model => model.Address)

                <span>Số điện thoại<label>*</label></span>
                @Html.TextBoxFor(model => model.PhoneNumber)
            </div>
            <div class="clearfix"> </div>
        </div>

        <div class="register-bottom-grid">
            <h3>Thông tin đăng nhập</h3>
            <div class="mation">
                <span>Tên tài khoản<label>*</label></span>
                @Html.TextBoxFor(model => model.UserName)

                <span>Mật khẩu<label>*</label></span>
                @Html.PasswordFor(model => model.PassWord)

                <div class="clearfix"> </div>
            </div>
        </div>
        <div class="clearfix"> </div>

        MvcCaptcha registerCaptcha = new MvcCaptcha("registerCaptcha");
        @Html.Captcha(registerCaptcha)
        @Html.TextBox("CaptchaCode")
        <div class="register-but">
            <input type="submit" value="submit">
            <div class="clearfix"> </div>
        </div>
    }
</div>