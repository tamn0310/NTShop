@model NTShop.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Layouts.cshtml";
}
<div class="account_grid">
    <div class="login-right">
        <h3>Đăng nhập</h3>
        @using (Html.BeginForm("Login", "Account", new { returnUrl = @ViewBag.ReturnUrl }, FormMethod.Post))
        {
            <div>
                <span>Tên tài khoản<label>*</label></span>
                @Html.TextBoxFor(model => model.UserName)
            </div>
            <div>
                <span>Mật khẩu<label>*</label></span>
                @Html.PasswordFor(model => model.PassWord)
            </div>
            <div>
                @Html.CheckBoxFor(model => model.RememberMe)
                Nhớ mật khẩu
            </div>
            <div><a class="forgot" href="#">Bạn quên mật khẩu?</a></div>

            <input type="submit" value="Login">
        }
    </div>
    <div class="login-left">
        <h3>Chưa có tài khoản</h3>
        <p>
            Nếu bạn chưa có tài khoản vui lòng đăng ký ở link phía bên dưới :
        </p>
        <a class="acount-btn" href="/dang-ky.html">Tạo tài khoản</a>
    </div>
    <div class="clearfix"> </div>
</div>